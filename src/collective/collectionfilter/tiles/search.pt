<aside class="collectionSearch ${view/filterClassName} pat-collectionfilter"
       data-pat-collectionfilter='{
           "collectionUUID": "${view/settings/target_collection}",
           "reloadURL": "${view/reload_url}"
       }'
       tal:condition="view/available"
       i18n:domain="collective.collectionfilter">

  <header tal:content="view/title">Title</header>
  <div class="searchContent">
    <form method="get" name="searchForm" role="form"
        tal:attributes="action view/action_url">
        <input type="hidden" name="collectionfilter" value="1"/>
        <tal:urlquery repeat="item python:view.urlquery.items()">
          <input type="hidden" tal:attributes="name python:item[0]; value python:item[1]"/>
        </tal:urlquery>
        <input name="SearchableText" type="text"
            data-url="${view/ajax_url}"
            tal:attributes="value view/value">
        <button type="submit" i18n:translate="button_search">Search</button>
    </form>
  </div>
</aside>
