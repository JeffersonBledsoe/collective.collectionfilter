<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">
<body>

<aside class="collectionSortOn ${view/filterClassName} pat-collectionfilter"
       data-pat-collectionfilter='${view/pat_options}'
       tal:condition="view/available">

  <tal:if condition="view/settings/target_collection">
  <header class="portletHeader" tal:condition="view/title" tal:content="view/title">Title</header>
  <div class="portletContent filterContent"
       tal:define="results view/results;
                   input_type view/settings/input_type">

        <tal:if condition="python:input_type == 'checkboxes_dropdowns'">
          <select name="sort_on">
            <option value="" data-url="${view/ajax_url}" i18n:translate="">Select</option>
          <tal:items repeat="item results">
            <option
                value="${item/value}"
                data-url="${view/ajax_url}&sort_on=${item/value}&sort_order=${item/new_order}"
                tal:attributes="selected python:'selected' if item['active'] else None">
              <span class="filterLabel">
                <span tal:replace="item/title">Item</span>
              </span>
            </option>
          </tal:items>
          </select>
        </tal:if>

        <tal:if condition="python:input_type == 'links'">
        <ul>
          <tal:items repeat="item results">
          <li>
            <a
                rel="nofollow"
                href="${view/ajax_url}&sort_on=${item/value}&sort_order=${item/new_order}"
                tal:attributes="class python:'%s%s' %(item['curr_order'], ' active' if item['active'] else '')">
              <span>
                <span tal:replace="item/title">Item</span>
              </span>
            </a>
          </li>
          </tal:items>
        </ul>
        </tal:if>

  </div>
  </tal:if>
</aside>


</body>
</html>
