<aside class="portlet portletCollectionFilter pat-collectionfilter"
       tal:define="data view/results"
       data-pat-collectionfilter='{
          "collectionUUID": "${data/collectionUUID}",
          "reloadURL": "${data/reloadURL}"
       }'
       i18n:domain="collective.portlet.collectionfilter">

  <header class="portletHeader"
          tal:content="data/title">
          Title
  </header>
  <div class="portletContent">
    <ul>
      <tal:items repeat="group data/filteritems">
        <li tal:attributes="class python:'selected' if group['selected'] else ''">
          <a rel="nofollow"
             class="filteritem"
             tal:attributes="href group/url;
                             title string:Count: ${group/count}">
            <span tal:content="group/title">Group</span>
            <tal:show_count condition="view/data/show_count">(<span tal:replace="group/count" />)</tal:show_count>
          </a>
        </li>
      </tal:items>
    </ul>
  </div>
</aside>
