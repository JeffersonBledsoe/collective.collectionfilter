<aside class="portlet ${view/filterClassName} portletCollectionFilter pat-collectionfilter"
       tal:define="input_type view/input_type;
                   settings view/settings"
       data-pat-collectionfilter='{
          "collectionUUID": "${settings/target_collection}",
          "reloadURL": "${view/reload_url}"
       }'
       i18n:domain="collective.collectionfilter">

  <header class="portletHeader"
          tal:content="view/title">
          Title
  </header>
  <div class="portletContent">

        <tal:if condition="python:input_type in ('checkbox', 'radio')">
        <ul>
          <tal:items repeat="item view/results">
          <li tal:attributes="class python:'selected filterItem ' + item['title'].lower() if item['selected'] else 'filterItem ' + item['title'].lower()">
            <label>
              <input type="checkbox" class="filterControl filteritem"
                  tal:attributes="type input_type;
                                  name view/id;
                                  value item/value;
                                  checked python:'checked' if item['selected'] else None;
                                  data-url item/url"/>
              <span class="filterLabel">
                <span tal:replace="python:item['title'].replace('/', u'/\u00AD')">item</span>
                <tal:show_count condition="settings/show_count">(<span tal:replace="item/count" />)</tal:show_count>
              </span>

            </label>
          </li>
          </tal:items>
        </ul>
        </tal:if>

        <tal:if condition="python:view.input_type == 'dropdown'">
          <select class="filteritem" tal:attributes="name view/id">
          <tal:items repeat="item view/results">
            <option tal:attributes="
                value item/value;
                selected python:'selected' if item['selected'] else None;
                class python:item['title'].lower();
                data-url item/url">
              <span class="filterLabel">
                <span tal:replace="python:item['title'].replace('/', u'/\u00AD')">item</span>
                <tal:show_count condition="settings/show_count">(<span tal:replace="item/count" />)</tal:show_count>
              </span>
            </option>
          </tal:items>
          </select>
        </tal:if>

        <tal:if condition="python:view.input_type == 'link'">
        <ul>
          <tal:items repeat="item view/results">
          <li tal:attributes="class python:'selected filterItem ' + item['title'].lower() if item['selected'] else 'filterItem ' + item['title'].lower()">
            <a rel="nofollow"
               class="filteritem"
               tal:attributes="href item/url;
                               title string:Count: ${item/count}">
              <span tal:content="item/title">item</span>
              <tal:show_count condition="settings/show_count">(<span tal:replace="item/count" />)</tal:show_count>
            </a>
          </li>
          </tal:items>
        </ul>
        </tal:if>

  </div>
</aside>
